{
  "url": "http://{{ domain }}",
  "server": {
    "port": 2368,
    "host": "127.0.0.1"
  },
  "database": {
    "client": "mysql",
    "connection": {
      "host": "localhost",
      "user": "{{ ghost_db_user }}",
      "password": "{{ ghost_db_password }}",
      "database": "{{ ghost_db }}"
    }
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "transports": [
      "file",
      "stdout"
    ]
  },
  "process": "systemd",
  "paths": {
    "contentPath": "content"
  }
}
